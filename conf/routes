# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                          controllers.Application.index

GET     /table/all              controllers.TableController.getAllTables

GET     /player/all              controllers.PlayerController.getAllPlayer
GET     /player/paid             controllers.PlayerController.getPaidPlayer

GET     /match/all             controllers.MatchController.getAllMatches
GET     /match/:id/setWaitingPosition        controllers.MatchController.setWaitingPos(id: Long, pos: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)

# WebSocket
GET     /ws                     controllers.WebSocketController.socket
