# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index
GET     /result                         controllers.Application.result

# PlayerController
GET     /player/all                     controllers.PlayerController.getAllPlayer
GET     /player/:id                     controllers.PlayerController.getPlayer(id: Long)

# MatchController:
GET     /match/all                      controllers.MatchController.getAllMatches
GET     /match/typeid/:typeid           controllers.MatchController.getMatchesByType(typeid: Long)
# GET     /match/filter                   controllers.MatchController.getFilteredMatchList()
POST    /match/matchtotable/:tableName     controllers.MatchController.setMatchToTable(tableName: Int, checkPlayable: Boolean = true, print: Boolean = true, secondTable: Boolean = false)
POST    /match/matchtosecondtable/:tableName     controllers.MatchController.setMatchToTable(tableName: Int, checkPlayable: Boolean = false, print: Boolean = false, secondTable: Boolean = true)
GET     /match/open/all                 controllers.MatchController.getOpenMatches
GET     /match/open/typeid/:typeid      controllers.MatchController.getOpenMatchesByTypeId(typeid: Long)
GET     /match/played/all               controllers.MatchController.getPlayedMatches
GET     /match/played/typeid/:typeid    controllers.MatchController.getPlayedMatchesByTypeId(typeid: Long)
GET     /match/loadnew                  controllers.MatchController.loadNewMatches
GET     /match/:id                      controllers.MatchController.getMatch(id: Long)
# Result format: [[5,11],[13,11],[11,0],[11,4]]
POST    /match/:id/result               controllers.MatchController.setResult(id: Long)

GET     /types/all                      controllers.MatchController.getTypes
GET     /types/open/all                controllers.MatchController.getActiveTypes

# TableController:
GET     /table/all                      controllers.TableController.getAllTables
GET     /table/free                     controllers.TableController.getFreeTables
GET     /table/:id                      controllers.TableController.getTable(id: Long)
GET     /table/:id/lock                 controllers.TableController.lockTable(id: Long)
GET     /table/:id/unlock               controllers.TableController.unlockTable(id: Long)

# MatchListController:
GET     /matchlist/all                  controllers.MatchListController.getAllMatchList
GET     /matchlist/next                 controllers.MatchListController.getNext
POST    /matchlist/addMatch             controllers.MatchListController.addMatch
DELETE  /matchlist/deleteMatch/:uuid    controllers.MatchListController.deleteMatch(uuid: String)
GET     /matchlist/active/:isActive     controllers.MatchListController.setActive(isActive: Boolean)
GET     /matchlist/move/:uuid/:position controllers.MatchListController.move(uuid: String, position: Int)
GET     /matchlist/autostart            controllers.MatchListController.autoStart
POST    /match/free                     controllers.MatchController.freeMatches
POST    /match/takeBack                 controllers.MatchController.takeBackMatches
GET     /match/delete/:id               controllers.MatchController.deleteMatch(id: Long)

# WebSocket for push messages
GET     /register                       controllers.WebSocketController.socket

# PrinterController:
GET     /printer/all                    controllers.PrinterController.allPrinter
GET     /printer/printpdf/:id           controllers.PrinterController.printPDF(id: Long)
GET     /printer/print/:id              controllers.PrinterController.print(id: Long)
POST    /printer/printAll               controllers.PrinterController.printAll
GET     /printer/set/:name              controllers.PrinterController.setPrinter(name: String)
GET     /printer/setprintonstart/:printOnStart        controllers.PrinterController.setPrintOnStart(printOnStart: Boolean)

GET     /settings/all                   controllers.SettingsController.allSettings
# POST    /settings                       controllers.SettingsController.setSettings


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)

