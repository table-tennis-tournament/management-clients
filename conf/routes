# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                          controllers.Application.index

GET     /getAllTables              controllers.TableController.getAllTables

GET     /getAllPlayer              controllers.PlayerController.getAllPlayer
GET     /getPaidPlayer             controllers.PlayerController.getPaidPlayer

GET     /getAllMatches             controllers.MatchController.getAllMatches
GET     /match/:id/setWaitingPosition        controllers.MatchController.setWaitingPos(id: Long, pos: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)
