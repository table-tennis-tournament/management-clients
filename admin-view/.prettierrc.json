{
  "$schema": "https://json.schemastore.org/prettierrc",

  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",

  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "parser": "angular",
        "printWidth": 140,
        "htmlWhitespaceSensitivity": "ignore"
      }
    },
    {
      "files": ["*.component.html"],
      "options": {
        "parser": "angular",
        "printWidth": 140
      }
    },
    {
      "files": ["*.scss", "*.css"],
      "options": {
        "singleQuote": false,
        "printWidth": 100
      }
    },
    {
      "files": ["*.json", ".prettierrc", ".eslintrc"],
      "options": {
        "printWidth": 80,
        "trailingComma": "none"
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "printWidth": 80,
        "proseWrap": "always"
      }
    }
  ]
}
